<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="DrawerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/white</item>
    </style>


    <style name="dividing_line_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_dividing</item>
    </style>

    <style name="form_edittext">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">40.0dip</item>
    </style>

</resources>
